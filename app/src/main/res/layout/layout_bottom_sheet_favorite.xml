<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_container_fav"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/bottom_sheet_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                style="@style/ViewBottom"/>

            <TextView
                android:id="@+id/tvWordDialogFav"
                style="@style/TextViewTitle"/>

            <TextView
                android:id="@+id/tvDescriptionDialogFav"
                style="@style/TextViewContent"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:orientation="horizontal">

               <Space
                    android:layout_width="25dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/ivCopyDialogBotFav"
                    style="@style/ImageIcon"
                    app:srcCompat="@drawable/ic_baseline_content_copy_24" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="0dp" />

                <ImageView
                    android:id="@+id/ivLikeDialogBotFav"
                    style="@style/ImageIcon"
                    app:srcCompat="@drawable/star" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <ImageView
                    android:id="@+id/ivShareDialogBotFav"
                    style="@style/ImageIcon"
                    app:srcCompat="@drawable/ic_baseline_share_24" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#DAD3D3" />

            <Button
                android:id="@+id/btnCloseBotFav"
                style="@style/ButtonBottomSheet"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="4dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>